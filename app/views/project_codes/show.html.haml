- model_class = ProjectCode
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @project_code.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), project_codes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_project_code_path(@project_code), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), project_code_path(@project_code), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
