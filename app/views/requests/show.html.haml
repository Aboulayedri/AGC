- model_class = Request
.page-header
  %h1 Demande

%p
  %strong Projet :
  %br
  = @request.project.name
%p
  %strong Consultant proposé :
  %br
  = @request.proposal.name
%p
  %strong Date :
  %br
  = @request.date
%p
  %strong Etat :
  %br
  = @request.etat

.form-actions
  = link_to "Retour aux Demandes", requests_path, :class => 'btn'
  = link_to "Modifier", edit_request_path(@request), :class => 'btn'
  = link_to "Supprimer", request_path(@request), :method => "delete", :data => { :confirm => "Êtes-vous sûr ?" }, :class => 'btn btn-danger'
