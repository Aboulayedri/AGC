= simple_form_for @entity, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name, label: "Nom"
  = f.association :manager, collection: Collaborator.managers, prompt: "Sélectionner le manager de l'entité"
  = f.input :description
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to "Annuler", entities_path, :class => 'btn'
