- model_class = List
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:entity_id) + ':'
  %br
  = @list.entity_id
%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @list.date

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), lists_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_list_path(@list), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), list_path(@list), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
